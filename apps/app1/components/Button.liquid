{% comment %}
Usage: 
{% include 'button' with color: 'primary', size: 'medium', text: 'Click me' %}
{% endcomment %}

{% capture buttonClasses %}
    w-full px-3 py-2.5 text-sm border rounded-md text-gray-700 leading-tight focus:outline-none focus:shadow-outline
    {% if size == 'small' %}
        px-3 py-2 text-xs
    {% elsif size == 'large' %}
        px-3 py-3 text-base
    {% endif %}
    {% if color == 'primary' %}
        bg-blue-500 text-white
    {% elsif color == 'secondary' %}
        bg-gray-500 text-white
    {% elsif color == 'success' %}
        bg-green-500
    {% elsif color == 'danger' %}
        bg-red-500
    {% elsif color == 'warning' %}
        bg-yellow-500
    {% elsif color == 'info' %}
        bg-cyan-500
    {% elsif color == 'light' %}
        bg-gray-200 text-black
    {% elsif color == 'dark' %}
        bg-gray-800 text-white
    {% endif %}
{% endcapture %}

<button class="{{ buttonClasses }}">{{ text }}</button>
